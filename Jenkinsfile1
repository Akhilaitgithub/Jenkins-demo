pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying..'
                sh 'echo Deploying application to server..'
            }
        }
    }

    post {
        success {
            echo 'Build, Test, and Deploy completed successfully!'
        }
        failure {
            echo 'Pipeline failed! Check logs.'
        }
    }
}

